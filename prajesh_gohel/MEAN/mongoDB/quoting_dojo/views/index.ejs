<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Quoting Dojo</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
  </head>
  <body>
    <% JSON.stringify(messages) %>
    <% if (messages.submit) { %>
      <% for (var x of messages.submit) { %>
        <p class="alert alert-danger"><%= x %></p>
      <% } %>
    <% } %>
    <div class="container">
      <h1 class="mb-3">Welcome To Quoting Dojo</h1>
      <form class="col-4" action="/quotes" method="post">
        <div class="form-group">
          <input type="text" class="form-control" name="name" placeholder="Your Name">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="quote" placeholder="Your Quote">
        </div>
        <div class="row">
          <button type="submit" class="btn btn-success mr-auto">Add my quote!</button>
          <a href="/quotes" class="btn btn-primary">Skip to quotes!</a>
        </div>
      </form>
    </div>
    <script type="text/javascript" src="/jquery/dist/jquery.min.js" charset="utf-8"></script>
    <script type="text/javascript" src="/bootstrap/dist/js/bootstrap.min.js" charset="utf-8"></script>
  </body>
</html>
